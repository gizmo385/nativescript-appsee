{
    "compileOnSave": true,
    "compilerOptions": {
        "allowUnreachableCode": false,
        "allowUnusedLabels": false,
        "baseUrl": ".",
        "declaration": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "inlineSources": false,
        "inlineSourceMap": false,
        "lib": [
            "dom",
            "es2015.iterable",
            "es6",
            "es2017",
            "scripthost"
        ],
        "module": "commonjs",
        "noEmitHelpers": false,
        "noEmitOnError": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": false,
        "noImplicitReturns": true,
        "noImplicitUseStrict": true,
        "noLib": false,
        "paths": {
            "*": [
                "./node_modules/*"
            ],
            "~/*": [
                "./app/*"
            ]
        },
        "pretty": true,
        "skipLibCheck": true,
        "removeComments": true,
        "target": "es6"
    },
    "exclude": [
        "**/*.aot.ts",
        "**/*.js",
        "dist",
        "node_modules",
        "platforms",
        "hooks",
        "npm_plugins",
        ".tmp_backup"
    ],
    "filesGlob": [
        "./app/"
    ],
    "include": [
        "app/**/*"
    ]
}